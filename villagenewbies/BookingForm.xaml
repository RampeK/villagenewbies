<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VillageNewbies.BookingForm"
             Title="Yhteystietolomake">
    <VerticalStackLayout VerticalOptions="Center" Padding="10">
        <Label FontSize="20" 
               Text="Täytä yhteystiedot varaukseen" 
               VerticalOptions="Center" 
               HorizontalOptions="Center" 
        />
        <Picker 
            x:Name="Asiakaspicker"
            SelectedIndexChanged="OnAsiakasSelected"
            WidthRequest="300"
        />
        <Entry x:Name="Sahkoposti" WidthRequest="300" Placeholder="Sähköposti"/>
        <Entry x:Name="Etunimi" WidthRequest="300" Placeholder="Etunimi" />
        <Entry x:Name="Sukunimi" WidthRequest="300" Placeholder="Sukunimi" />
        <Entry x:Name="Lahiosoite" WidthRequest="300" Placeholder="Lähiosoite" />
        <Entry x:Name="Postinro" WidthRequest="300" Placeholder="Postinumero" />
        <Entry x:Name="Toimipaikka" WidthRequest="300" Placeholder="Toimipaikka" />
        <Entry x:Name="Puhelin" WidthRequest="300" Placeholder="Puhelinnumero" />
        <Button x:Name="TeeVaraus" Text="Tee varaus" WidthRequest="300" />


    </VerticalStackLayout>
</ContentPage>