<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VillageNewbies.AddServicesPage"
             Title="Lis채채 palvelu">
    <VerticalStackLayout VerticalOptions="Center">
        <Label 
            Text="Anna uuden palvelun tiedot"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="20"
        />

        <Picker 
            x:Name="AreaPicker"
            Title="Valitse alue"
            WidthRequest="200"
            SelectedIndexChanged="OnAreaSelected"
        />
        <Picker 
            x:Name="TypePicker"
            Title="Valitse palvelun tyyppi"
            WidthRequest="200"
            SelectedIndexChanged="OnTypeSelected"   
        />
        <Entry x:Name="palvelunimi" Placeholder="Palvelun nimi" WidthRequest="150" MinimumWidthRequest="300" Margin="30,10,0,0" />
        <Entry x:Name="palvelukuvaus" Placeholder="Palvelun kuvaus" WidthRequest="150" MinimumWidthRequest="300" Margin="30,10,0,0" />
        <Entry x:Name="palveluhinta" Placeholder="Palvelun hinta" WidthRequest="150"  MinimumWidthRequest="300" Margin="30,10,0,0" />
        <Button x:Name="Lisaapalvelu" Text="Lis채채 palvelu" Margin="30,10,0,0" WidthRequest="150" />



        
    </VerticalStackLayout>
</ContentPage>