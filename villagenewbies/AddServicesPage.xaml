<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VillageNewbies.AddServicesPage"
             Title="AddServicesPage">
    <VerticalStackLayout VerticalOptions="Center">
        <Label 
            Text="Anna uuden palvelun tiedot"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            />

        <Picker 
            x:Name="AreaPicker"
            Title="Valitse alue"
            WidthRequest="200"
            SelectedIndexChanged="OnAreaSelected"
        />

        <Entry x:Name="palvelunimi" Placeholder="Palvelun nimi" WidthRequest="150" MinimumWidthRequest="300" Margin="30,10,0,0" />
        <Entry x:Name="Palvelutyyppi" Placeholder="Palvelun tyyppi" WidthRequest="150" MinimumWidthRequest="300" Margin="30,10,0,0"/>
        <Entry x:Name="palvelukuvaus" Placeholder="Palvelun kuvaus" WidthRequest="150" MinimumWidthRequest="300" Margin="30,10,0,0" />
        <Entry x:Name="palveluhinta" Placeholder="Palvelun hinta" WidthRequest="150"  MinimumWidthRequest="300" Margin="30,10,0,0" />
        <Button x:Name="Lisaapalvelu" Text="Lisää palvelu" Margin="30,10,0,0" WidthRequest="150" />



        
    </VerticalStackLayout>
</ContentPage>