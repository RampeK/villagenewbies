<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VillageNewbies.Views.CabinsPage"
             Title="Mökit">

    <Grid Padding="10">
        <!-- Gridin rivit -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Ensimmäinen rivi, jossa alueiden picker -->
            <RowDefinition Height="Auto" />
            <!-- Toinen rivi, jossa hintaluokka picker -->
            <RowDefinition Height="*" />
            <!-- Kolmas rivi, jossa mökkien lista -->
        </Grid.RowDefinitions>

        <!-- Gridin sarakkeet -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <!-- Valikot -->
            <ColumnDefinition Width="Auto" />
            <!-- Napit -->
        </Grid.ColumnDefinitions>

        <!-- Alueiden alasvetovalikko -->
        <Picker x:Name="AreaPicker"
            Title="Valitse alue"
            SelectedIndexChanged="OnAreaSelected"
            WidthRequest="200"
            Grid.Row="0"
            Grid.Column="0" />

        <!-- Hinta-alasvetovalikko, korjattu korkeus -->
        <Picker x:Name="HintaPicker"
            Title="Valitse hintaluokka"
            SelectedIndexChanged="onPriceSelected"
            WidthRequest="200"
            Grid.Row="1"
            Grid.Column="0" />

        <!-- Napit oikeassa yläkulmassa -->
        <StackLayout Grid.Row="0"
                     Grid.Column="1"
                     Grid.RowSpan="2"
                     Orientation="Vertical"
                     HorizontalOptions="End"
                     Spacing="10">

            <Button Text="Lisää Mökki"
                    x:Name="LisaaMokki"
                    FontSize="12"
                    BackgroundColor="BlueViolet"
                    TextColor="White"
                    WidthRequest="100"
                    HeightRequest="30"
                    CornerRadius="10"/>

            <Button Text="Poista Mökki"
                    x:Name="poistaMokki"
                    FontSize="12"
                    BackgroundColor="DarkGreen"
                    TextColor="White"
                    WidthRequest="100"
                    HeightRequest="30"
                    CornerRadius="10"/>

            <Button Text="Lisää Alue"
                    x:Name="LisaaAlue"
                    FontSize="12"
                    BackgroundColor="BlueViolet"
                    TextColor="White"
                    WidthRequest="100"
                    HeightRequest="30"
                    CornerRadius="10"/>

            <Button Text="Poista Alue"
                    x:Name="PoistaAlue"
                    FontSize="12"
                    BackgroundColor="DarkGreen"
                    TextColor="White"
                    WidthRequest="100"
                    HeightRequest="30"
                    CornerRadius="10"/>
        </StackLayout>

        <!-- Mökkien lista -->
        <CollectionView x:Name="CabinsCollectionView"
                        Grid.Row="2"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        HeightRequest="500">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout Padding="10">
                        <Label Text="{Binding mokkinimi}"
                               FontAttributes="Bold"/>
                        <Label Text="{Binding kuvaus}"/>
                        <Label Text="{Binding hinta, StringFormat='Hinta: {0:C}'}"/>
                        <!-- Lisää tarvittavat tiedot tähän -->
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
