<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VillageNewbies.Views.CabinsPage"
             Title="Mökit">

    <VerticalStackLayout>
        <!-- Alueiden alasvetovalikko -->
        <Picker x:Name="AreaPicker"
                Title="Valitse alue"
                SelectedIndexChanged="OnAreaSelected"
                WidthRequest="200">
        </Picker>

        <Picker x:Name="HintaPicker"
                Title="Valitse hintaluokka"
                SelectedIndexChanged="onPriceSelected"
                WidthRequest="200">
        </Picker>

        <Button Text="Hae"
         Margin="10"
         x:Name="HaeMokit"
         FontSize="Medium"
         BackgroundColor="#3498DB"
         TextColor="White"
         WidthRequest="100" 
         HeightRequest="30"
         CornerRadius="10"/>

        <Button Text="Lisää Mökki"
         Margin="10"
         x:Name="LisaaMokki"
         FontSize="12"
         BackgroundColor="BlueViolet"
         TextColor="White"
         WidthRequest="100" 
         HeightRequest="30"
         CornerRadius="10"/>

        <Button Text="Poista Mökki"
         Margin="10"
         x:Name="poistaMokki"
         FontSize="12"
         BackgroundColor="DarkGreen"
         TextColor="White"
         WidthRequest="100" 
         HeightRequest="30"
         CornerRadius="10"/>

        <!-- Mökkien lista -->
        <CollectionView x:Name="CabinsCollectionView" HeightRequest="500">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout Padding="10">
                        <Label Text="{Binding mokkinimi}"
                               FontAttributes="Bold"/>
                        <Label Text="{Binding kuvaus}"/>
                        <Label Text="{Binding hinta, StringFormat='Hinta: {0:C}'}" />
                        <!-- Lisää tarvittavat tiedot tähän -->
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>